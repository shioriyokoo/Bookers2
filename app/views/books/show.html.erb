<div>
  <h1>Book detail</h1>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p><%= @book.user.name %></p>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book), method: :edit %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>