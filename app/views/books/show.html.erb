<!-- ユーザーの詳細 -->
<div>
  <h2>User info</h2>

  <%= image_tag @book.user.get_profile_image(100,100) %>

  <h3>name<%= @book.user.name %></h3>

  <h4>introduction<%= @book.user.introduction %></h3>
   <% if @book.user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@book.user) %></p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book_new, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

<div>
  <h1>Book detail</h1>
  <%= link_to user_path(@book) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
  <% end %>
  <%= link_to user_path(@book) do %>
    <%= @book.user.name %>
  <% end %>
  <%= link_to book_path(@book) do %>
    <%= @book.title %>
  <% end %>
  <%= @book.body %>

  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book), method: :edit %>
    <%= link_to "Destroy", books_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>