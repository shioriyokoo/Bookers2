<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <!-- ユーザーの詳細 -->
        <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @book.user == current_user %>
            <%= link_to edit_user_path(@book.user) do %>
             <i class="fas fa-user-cog"></i>
            <% end %>
          <% else %>
            <%= link_to user_path(@user) do %>
             <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
        <!-- 新規投稿 -->
  <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, local:true do |f| %>
    <form accept-charset="UTF-8">
      <div class="form-group">
        <label for="book_title">Title</label>
        <input class="form-control book_title" type="text" name="book[title]" id="book_title">
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
    </form>
    <% end %>
</div>
<!-- 投稿詳細 -->
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <% if @book.user == current_user %>
            <%= link_to user_path(@user) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
            <% end %>
          <% else %>
            <%= link_to user_path(@book) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %>
            <% end %>
          <% end %>
          <br>
            <% if @book.user == current_user %>
              <%= link_to user_path(@user) do %>
                <%= @book.user.name %>
              <% end %>
            <% else %>
              <%= link_to user_path(@book) do %>
                <%= @book.user.name %>
              <% end %>
            <% end %>
        </td>
        <td>
          <%= link_to book_path(@book) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %>
        </td>
        <% if @book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(@book) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
</div>
</div>
</main>