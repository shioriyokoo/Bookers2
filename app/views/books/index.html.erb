<h1>Book detail</h1>
<ul class="users">
  <% @books.each do |book| %>
  <li>
    <%= attachment_image_tag book, :book_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <%= book.title %>
    <%= book.body %>
    <%= link_to "Edit", edit_book_path(book) %>
    <%= link_to "Destroy", book_path(book), method: :delete %>
  </li>

  <% end %>
</ul>