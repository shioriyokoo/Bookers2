<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<h1>Book detail</h1>
<ul class="users">
  <% @books.each do |book| %>
  <li>
    <%= attachment_image_tag book, :book_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <%= book.title %>
    <%= book.body %>
    <%= link_to "Edit", edit_book_path(book) %>
    <%= link_to "Destroy", book_path(book), method: :delete %>
  </li>

  <% end %>
</ul>
<% end %>