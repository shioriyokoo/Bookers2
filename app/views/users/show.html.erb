<!-- ユーザーの詳細 -->
<div>
  <h2>User info</h2>

  <%= image_tag @user.get_profile_image(100,100) %>

  <h3>name<%= @user.name %></h3>

  <h4>introduction<%= @user.introduction %></h3>
   <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- 新規投稿 -->
<%= render 'list', user: @user %>

<!-- ユーザーの投稿一覧 -->
<h2>Books</h2>
<% @books.each do |book| %>
<div>
    <%= image_tag @user.get_profile_image(100,100) %>
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  <%= book.body %>
</div>
<% end %>