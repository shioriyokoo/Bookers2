<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<main>
  <p id="notice">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
          <h2>User info</h2
          <form enctype="multipart/form-data" acceept-charset="UTF-8">
            <%= form_with model: @user, local:true do |f| %>
            <div class="form-group">
            <label for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
              </div>
              <div class="form-group">
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
<div class="form-group">
  <label for="introduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
<div class="form-group">
  <%= f.submit "Update User" %>
<% end %>
          </form>
        </div>
      </div>
    </div>
  </p>
</main>